<div class="container">
  <h1 class="index-title">Cocktails</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-4">
        <div class="card"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
                 url('<%= image_path cocktail.photo, height: 300, width: 400, crop: :fill %>')">
          <div class="card-category">Popular</div>
          <div class="card-description">
            <h3><%= link_to cocktail.name, cocktail_path(cocktail) %></h3>
            <p>click for recipe</p>
          </div>

        </div>
      </div>
    <% end %>
  </div>
</div>

